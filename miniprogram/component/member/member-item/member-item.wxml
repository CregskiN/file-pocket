<!--component/member/member-item/member-item.wxml-->
<view class="member-item_container">
    <view class="left">
        <image class="left_img" src="{{member.avatarUrl}}" mode="aspectFit"/>
    </view>
    
    <view class="middle">
        <view class="middle_userName">{{member.username}}</view>
        <view class="middle_joinTime">加入时间{{member.joinTime}}</view>
    </view>

    <view class="right">
        <view class="delete" bind:tap="onDelete">
            踢除
        </view>
    </view>
</view>
