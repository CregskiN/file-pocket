/* component/member/member-item/member-item.wxss */

.member-item_container {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;

    height: 140rpx;
    width: 95%;
    margin: 15rpx auto 0 auto;

    border-radius: 10rpx;
    box-shadow: #f2f2f2 0 0 10rpx;

    background-color: #fffcf5;
}

.left {
    height: 100%;
    width: 20%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.left_img {
    height: 100rpx;
    width: 100rpx;

    overflow: hidden;
    border-radius: 50%;

    background-color: #f5f6f7;
}

.middle {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;

    width: 65%;
    height: 100%;

    font-size: 25rpx;

    /* background-color: blue; */
}

.middle_userName {
    /* height: 30rpx; */
    width: 100%;

    font-size: 33rpx;

    /* color: #fff; */
}

.middle_userGrade {
    font-size: 28rpx;
    color: #bcc3ce;
}

.middle_joinTime {
    width: 100%;
    font-size: 25rpx;
    color: #bcc3ce;
}

.right {
    height: 100%;
    width: 15%;

    /* background-color: #e13d4f; */
}

.delete {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    width: 100%;
    height: 100%;

    font-weight: 700;

    color: #cb3c3b;

}
