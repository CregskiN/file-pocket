/* component/member/member-item/member-item.wxss */

.member-item_container {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;

    height: 150rpx;
    width: 90%;

}

.left {
    height: 100%;
    width: 25%;
}

.left_img {
    height: 100rpx;
    width: 100rpx;

    border-radius: 50%;

    background-color: #f2f2f2;
}

.middle {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;

    width: 60%;
    height: 100%;

    background-color: blue;
}

.middle_userName {
    height: 30rpx;
    width: 100%;

    font-size: 25rpx;

    color: #fff;
    
}

.right {
    height: 100%;
    width: 15%;

    background-color: #e13d4f;
}

.delete {
    width: 100rpx;
    height: 100rpx;
}
