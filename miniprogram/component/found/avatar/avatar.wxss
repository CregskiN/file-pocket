/* component/found/avatar/avatar.wxss */
.t-header_container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    width: 100%;
    height: 250rpx;

    background-color: #ffc044;
}

.t-header_avatar {
    width: 140rpx;
    height: 140rpx;

    margin-bottom: 20rpx;
    /* box-shadow: #f5f6f7 0 0 10rpx; */

    border-radius: 50%;
    overflow: hidden;
}

.t-header_lint {
    font-size: 20rpx;
    color: #fff;
    overflow: hidden;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    display: -webkit-box;
}
