<!-- component/found/img-upload/img-upload.wxml -->
<view class="img-upload_container" wx:if="{{type!=='detail'}}">
    <image class="img-upload_avatar" src="{{teamInfo.avatarUrl}}" mode="aspectFit" />
    <view class="img-upload_content">
        <view class="team_name">{{teamInfo.teamName}}</view>
        <!-- <view class="team_groupName">绑定群聊：小程序终结者</view> -->
    </view>
</view>

<view class="img-upload_container" wx:if="{{type!=='found'}}">
    <image class="img-upload_avatar" src="{{avatarUrl}}" mode="aspectFit" />
    <view class="img-upload_content">
        <view class="team_name">{{teamInfo.teamName}}</view>
        <!-- <view class="team_groupName">绑定群聊：小程序终结者</view> -->
    </view>
</view>