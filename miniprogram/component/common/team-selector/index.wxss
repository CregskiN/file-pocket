/* component/common/team-selector/index.wxss */
.team-selector_container {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;

    position: absolute;
    left:0;
    top:0;
    z-index: 101;
    overflow: hidden;

    width: 100vw;
    height: 100vh;

    background: rgba(0,0,0, 0.5);
}

.team-selector_window {
    width: 100%;
    height: 65%;
    border-radius: 10rpx;

    background-color: #fff;
}

.window_header {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;

    width: 100%;
    padding: 15rpx;
    box-sizing: border-box;
}

.header_cancel {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 100rpx;
    font-size: 32rpx;
    color: #2775b6;
}

.header_title {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;

    width: calc(100% - 90rpx);
    font-size: 30rpx;
}

.header_complete {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 100rpx;
    font-size: 32rpx;
    color: #2775b6;
}

/* tab相关 */
.index_scroll_tab {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
  
    width: 100%;
    height: 70rpx;
    /* padding: 7.5rpx 0; */
    border-top: 1rpx solid #f5f6f7;
    border-top-width: 80%;
    border-bottom: 1rpx solid #f5f6f7;
    border-bottom-width: 80%;
  
    background-color: #fff;
}

.tab_item {
    display: inline-flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    width: 150rpx;
    height: 70rpx;
}
  
.active {
    color: #000;
    font-weight: 700;

    border-bottom: 1px solid #2775b6;
    border-width: 100rpx;
}
  
.index_swiper {
    height: calc(65vh - 70rpx);
    width: 100%;
    /* background-color: red; */
}

.scroll_body {
    height: calc(100% -  70rpx);
    margin: 0 auto;
}
