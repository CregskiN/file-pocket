/* component/common/modify-team/modify-team.wxss */
.modify-team_container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    position: absolute;
    left: 0;
    top: 0;
    
    z-index: 199;
    overflow: hidden;

    width: 100vw;
    height: 100vh;

    background: rgba(0,0,0, 0.5);
}

.float-window_container {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;

    width: 560rpx;
    height: 360rpx;
    margin: 0 0 50rpx 0;

    border-radius: 10rpx;

    background-color: #fff;
}

.float-window_title {
    font-size: 32rpx;
    font-weight: 400;
}

.float-window_inputter {
    padding: 10rpx 5rpx;
    border-radius: 10rpx;

    background-color: #f2f2f2;
    text-align: center;
}

.float-window_body {

}

.float-window_choices {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;

    width: 100%;
}

.float-window_btn_cancel {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    width: 150rpx !important;
    height: 30rpx !important;
    margin: 0 !important;
    padding: 10rpx 5rpx !important;

    font-size: 28rpx !important;
    font-weight: 300 !important;
}

.float-window_btn_cancel:nth-child(2) {
    margin-left: 50rpx !important; 
}

