/* component/common/authorize/authorize.wxss */
.authorize_container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    position: absolute;
    top: 0;
    left: 0;
    z-index: 199;
    overflow: hidden;

    width: 100vw;
    height: 100vh;

    background: rgba(0,0,0, 0.5);
}

.float-window_container {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;

    width: 560rpx;
    height: 360rpx;
    margin: 0 0 50rpx 0;

    border-radius: 10rpx;

    background-color: #fff9ed;
}

.float-window_title {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;

    width: 100%;
    height: 120rpx;
    margin-bottom: 10rpx;

    font-size: 35rpx;
    font-weight: 600;
    color: #fff;

    background: url("https://wx-interchange.oss.jellyfishmix.com/FoSg26rhphSpaFoKkASsU5qvpSp6") no-repeat;
    background-size: calc(100% + 26rpx) auto;
    background-position: -9rpx -16rpx;
    border-radius: 10rpx;
}

.float-window_body {
    display: flex;
    justify-content: center;
    align-items: center;

    width: 80%;
    height: 240rpx;
}

.float-window_choices {
    width: 100%;
    height: 80rpx;
    background: url("https://wx-interchange.oss.jellyfishmix.com/FntihySmyFQOmBMT9ChtHjOMYOTw") no-repeat;
    background-size: 100% 100%;
}

.float-window_btn_cancel {
    display: flex;
    justify-content: center;
    align-items: center;

    width: 100% !important;
    height: 100% !important;
    padding: 0 !important;
    margin: 0 !important;

    color: #fff;

    background-color: transparent !important;
}

