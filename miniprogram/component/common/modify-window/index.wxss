/* component/common/modify-team/modify-team.wxss */
.modify-team_container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    position: absolute;
    left:0;
    top:0;
    z-index: 101;
    overflow: hidden;

    width: 100vw;
    height: 100vh;

    background: rgba(0,0,0, 0.5);
}

.float-window_container {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;

    width: 560rpx;
    height: 360rpx;
    margin: 0 0 50rpx 0;

    border-radius: 10rpx;

    background-color: #fff9ed;
}

.float-window_title {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;

    width: 100%;
    height: 120rpx;
    margin-bottom: 10rpx;

    font-size: 35rpx;
    font-weight: 600;
    color: #fff;

    background: url("https://wx-interchange.oss.jellyfishmix.com/FoSg26rhphSpaFoKkASsU5qvpSp6") no-repeat;
    background-size: calc(100% + 26rpx) auto;
    background-position: -9rpx -16rpx;
    border-radius: 10rpx;
}

.float-window_body {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    height: 160rpx;
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;

    font-size: 32rpx;
    font-weight: 400;
    color: #6f7070;
}

.float-window_inputter {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;

    width: 80%;
    height: 55rpx;
    margin-bottom: 30rpx;
    padding: 10rpx 10rpx;
    
    border-radius: 10rpx;
    box-shadow: #f2f2f2 0 0 10rpx;
    
    text-align: center;
    
    color: #000;
    background-color: #fffcf5;
}

.float-window_choices {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;

    width: 100%;
    height: 80rpx;
    background: url("https://wx-interchange.oss.jellyfishmix.com/FukzNi4kk8FK3E7163NjUcv7cjuL") no-repeat;
    background-size: 100% 100%;
}



button {
    margin: 0 !important;
    padding: 0 !important;
    display: flex;
    justify-content: center;
    align-items: center;

}

.float-window_btn_cancel {
    width: 50% !important;
    height: 100% !important;

    border-top: 1rpx solid #f2f2f2;

    background-color: transparent !important;
    border-radius: 0 !important;
    font-weight: 400 !important;
    border-radius: 10rpx !important;

    color: #000;
}

.float-window_btn_complete {
    width: 50% !important;
    height: 100% !important;

    background-color: transparent !important;
    border-radius: 0 !important;
    font-weight: 400 !important;
    border-radius: 10rpx !important;

    color: #fff;
}