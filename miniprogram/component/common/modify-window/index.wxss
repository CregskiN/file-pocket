/* component/common/modify-team/modify-team.wxss */
.modify-team_container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    position: absolute;
    left:0;
    top:0;
    z-index: 101;
    overflow: hidden;

    width: 100vw;
    height: 100vh;

    background: rgba(0,0,0, 0.5);
}

.float-window_container {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;

    width: 560rpx;
    height: 360rpx;
    margin: 0 0 50rpx 0;

    border-radius: 10rpx;

    background-color: #fff;
}

.float-window_title {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    height: 143rpx;
    width: 100%;
    font-size: 37rpx;
    font-weight: 500;
}

.float-window_body {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;

    height: 137rpx;
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;

    font-size: 32rpx;
    font-weight: 400;
    color: #6f7070;
}

.float-window_inputter {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;

    width: 80%;
    height: 55rpx;
    padding: 10rpx 10rpx;
    /* box-sizing: border-box; */
    background-color: #f5f6f7;

    text-align: center;
    color: #000;
}

.float-window_choices {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;

    width: 100%;
    height: 80rpx;
    border-top: 1px solid #f5f6f7;
}

.left {
    color: #d62f2f;
    border-right: 1px solid #f5f6f7;
}

.float-window_btn_cancel {
    width: 50% !important;
    height: 100% !important;
    background-color: #fff !important;
    border-radius: 0 !important;
    font-weight: 400 !important;
    border-radius: 10rpx !important;
}