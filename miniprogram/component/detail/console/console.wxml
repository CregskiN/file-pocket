<!-- 详情页：官方项目组 -->
<block wx:if="{{type==='detail_official'}}">
	<view class="detail_console" hidden="{{editting}}">
		<button class="detail_console_btn" bind:tap="inEdit">选择</button>
		<button class="detail_console_btn" open-type="share">邀请</button>
	</view>

	<view class="detail_console" hidden="{{!editting}}">
		<button class="{{selectCount ? classes.btns.share.active: classes.btns.share.normal}}" open-type="share">分享</button>
		<button class="{{selectCount ? classes.btns.share.active: classes.btns.share.normal}}" bind:tap="onAddToMyCollection">收藏</button>
	</view>
</block>


<!-- 详情页：我创建的项目组 -->
<block wx:if="{{type==='detail_create'}}">
	<view class="detail_console" hidden="{{editting}}">
		<button class="detail_console_btn" bind:tap="onUpload">上传</button>
		<button class="detail_console_btn" bind:tap="toMember">成员</button>
		<button class="detail_console_btn" bind:tap="inEdit">选择</button>
		<button class="detail_console_btn" open-type="share">邀请</button>
	</view>

	<view class="detail_console" hidden="{{!editting}}">
		<button class="{{selectCount ? classes.btns.share.active: classes.btns.share.normal}}" open-type="share">分享</button>
		<button class="{{selectCount ? classes.btns.share.active: classes.btns.share.normal}}" bind:tap="onAddToMyCollection">收藏</button>
		<button class="{{selectCount ? classes.btns.share.active: classes.btns.share.normal}}" bind:tap="onDelete">删除{{selectCount === 0 ? '' : '(' + selectCount+')'}}</button>
	</view>
</block>


