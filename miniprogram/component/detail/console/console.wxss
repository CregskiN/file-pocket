.detail_console {
    width: 100%;
    height: 115rpx;
    border-top: 1rpx solid #eee;
    position: fixed;
    bottom: 0;

    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: space-around;
    
    background-color: #fff;
    border-top: 1rpx solid #f2f2f2;
}

