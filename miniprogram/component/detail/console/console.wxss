    display: flex !important;
    flex-direction: column !important;
    align-items: center !important;
    justify-content: center !important;

    width: 25% !important;
    height: 90% !important;
    min-height: 70rpx !important;
    padding: 0 !important;
    margin: 0 !important;
    /* box-shadow: #eee 0 0 10rpx; */
