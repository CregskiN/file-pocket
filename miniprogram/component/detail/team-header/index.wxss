/* component/found/team-header/team-header.wxss */

.team-header_container {
    width: 100%;
    height: calc(100% - 1px);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid #f5f6f7;
    background:url("https://wx-interchange.oss.jellyfishmix.com/FnIYOm2RFBolLdfP6nurIWupwa7V") no-repeat;
    background-size: 100%;
    background-position: 0 -10rpx;
}

.team-header_avatar {
    display: block;
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    background-color: #f5f6f7;
}

.team-header_content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 0 0 0 20rpx;
    width: 350rpx;
    overflow: hidden;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    display: -webkit-box;
}

.team_name {
    font-size: 33rpx;
    font-weight: 400;
    overflow: hidden;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    display: -webkit-box;

    color: #fffcf5;
}


.team-header_statistics {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;

    color: #fffcf5;
}

.team-header_members {
    font-size: 25rpx;
    color: #fffcf5;
}

.team-header_fileCount {
    font-size: 25rpx;
    color: #fffcf5;
}
.team-header_creationTime {
    font-size: 25rpx;
    color: #fffcf5;
}

.toggleMode {
    display: inline-block;
    background-color: #f5f6f7;
}