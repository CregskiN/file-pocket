.top-bar_container {
    width: 100%;
    height: 50rpx;
    padding: 15rpx 10rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}

.top-bar_left {
    width: 25%;
    text-align: center;
    color: #2775b6;
}

.top-bar_middle {
    width: 50%;
    text-align: center;
}

.top-bar_right {
    width: 25%;
    text-align: center;
    color: #2775b6;
}
