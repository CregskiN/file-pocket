/* component/item/item.wxss */

.item_container {
    width: 695rpx;
    height: 150rpx;
    padding: 0 10rpx;
    margin: 15rpx auto 0 auto;
    border-radius: 10rpx;
    box-shadow: #fff 0 0 10rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.item_left {
    width: 25%;
    overflow: hidden;
}

.item_icon_avatar {
    display: block;
    width: 100rpx;
    height: 100rpx;
    margin: 0 auto;
    border-radius: 50%;
    background-color: #f2f2f2;
}

.item_middle {
    width: 70%;
    height: 100%;
    padding: 15rpx 0 8rpx 0;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
}

/* 项目模块 项目名 */
.item_name {
    width: 80%;
    font-size: 33rpx;
    overflow: hidden;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    display: -webkit-box;
}

.item_counts {
    padding: 0 0 5rpx 0;

    font-size: 25rpx;
    color: #47484c;

    opacity: 0.8;

    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.item_count_doc {
    margin: 0 10rpx 0 0;
}

.item_count_img {
    margin: 0 0 0 10rpx;
}

.item-right {
    width: 5%;
    height: 100%;
    position: relative;
}

.item_icon_more {
    display: inline-block;
    margin: 0 5rpx 8rpx 0;
    font-size: 40rpx;
    position: absolute;
    right: 0;
    bottom: 0;
}