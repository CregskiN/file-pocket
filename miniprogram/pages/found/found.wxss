.found_buttons {
    display: flex;
    flex-direction: row;
    justify-content: center;

    position: absolute;
    bottom: 0;

    width: 100%;
    height: 90rpx;
}

.found_btn {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;

    width: 50%;
    padding: 10rpx 60rpx;
    box-sizing: border-box;
    border-radius: 7rpx;

    font-size: 35rpx;
    font-weight: 500;
    text-align: center;
}

.icon {
    font-size: 35rpx;
    font-weight: 500;
}

.found_btn_left {
    background-color: #fff;
    color: #d62f2f;
}

.found_btn_right {
    background-color: #000c81;
    color: #fff;
}