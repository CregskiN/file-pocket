/* miniprogram/pages/detail/detail.wxss */

.detail_container {
    width: 100vw;
    height: 100vh;
    /* background-color: red; */
}

.detail_head {
    height: 15%;
}


.detail_body {
    width: 100%;
    margin-bottom: 11vh;
}

.detail_console {
    width: 100%;
    height: 10%;
    border-top: 1rpx solid #eee;
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    background-color: #fff;
}

.detail_web-view {
    width: 20% !important;
    height: 50% !important;
    position: relative;
}

.detail_console_webViewBtn {
    position: absolute !important;
    left: 0 !important;
    top: 0 !important;
    width: 100% !important;
    height: 100% !important;
    padding: 0 !important;
    margin: 0 !important;
    box-shadow: #eee 0 0 10rpx;
    /* font-size: 30rpx !important; */
    font-weight: 400 !important;
    color: #000 !important;
    display: flex !important;
    flex-direction: column !important;
    align-items: center !important;
    justify-content: center !important;
}

.detail_console_btn {
    width: 20% !important;
    height: 50% !important;
    padding: 0 !important;
    margin: 0 !important;
    box-shadow: #eee 0 0 10rpx;

    font-size: 30rpx !important;
    font-weight: 400 !important;
    color: #000 !important;
    display: flex !important;
    flex-direction: column !important;
    align-items: center !important;
    justify-content: center !important;
}