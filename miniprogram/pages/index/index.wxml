<!-- index.wxml -->
<view class="container">

	<view class='header'>
		<c-search/>
	</view>

	<view class="body">
		<view class="body_items">
			<c-item
			 class="body_item"
			 wx:for="{{items}}"
			 wx:key="id"
			 gid="{{item.gid}}"
			 icon="{{item.iconUrl}}"
			 name="{{item.name}}"
			 docCount="{{item.count.doc}}"
			 imgCount="{{item.count.img}}"
			 bind:more="onMore"
			/>
		</view>
	</view>

	<c-floatBtn
	 floatBtnIconClass="{{floatBtnIconClass}}"
	 isLogin="{{isLogin}}"
	 buttonTop="{{buttonTop}}"
	 buttonLeft="{{buttonLeft}}"
	 windowHeight="{{windowHeight}}"
	 windowWidth="{{windowWidth}}"
	 startPoint="{{startPoint}}"
	 bind:getAuthorization="onGetAuthorization"
	 bind:create="onCreate"
	/>

</view>

