<!-- index.wxml -->
<view class="container">

	<view class='header'>
		<c-search/>
	</view>

	<view class="body">
		<view class="body_items">
			<c-item
			 class="body_item"
			 bind:detail="toDetail"
			 wx:for="{{items}}"
			 wx:key="id"
			 id="{{item.id}}"
			 icon="{{item.iconUrl}}"
			 name="{{item.name}}"
			 docCount="{{item.count.doc}}"
			 imgCount="{{item.count.img}}"
			 bind:more="onMore"
			/>
		</view>
	</view>

	<c-floatBtn floatBtnIconClass="{{floatBtnIconClass}}" floatBtnContent="{{floatBtnContent}}" isLogin="{{isLogin}}" buttonTop="{{buttonTop}}" buttonLeft="{{buttonLeft}}" windowHeight="{{windowHeight}}" windowWidth="{{windowWidth}}" startPoint="{{startPoint}}"
		bind:getAuthorization="onGetAuthorization"
		bind:create="onCreate"
	/>


</view>

