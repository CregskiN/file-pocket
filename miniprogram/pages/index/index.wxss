/**index.wxss**/

.container {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;

  width: 100vw;
  height: 100vh;

  background-color: #f2f2f2;
}

/* .header {
  width: 100%;
  height: 80rpx;
} */

.index_body {
  width: 100vw;
  height: 1110rpx;
}

/* tab相关 */
.index_scroll_tab {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;

  width: 100%;
  height: 5vh;
  padding: 0.5vh 0;
  box-sizing: border-box;
}

.tab_item {
  display: inline-block;
  width: 150rpx;
  height: 4vh;

  font-size: 30rpx;
  line-height: 4vh;
  text-align: center;
}

.active {
  color: #2775b6;
  font-weight: 700;
}

/* tab-body 相关 */
.index_swiper {
  width: 100%;
  height: 95vh;
}

.index_swiper_item {
  z-index: 1 !important;
}



