.container {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  width: 100%;
  height: 8vh;
}

.body {
  width: 100%;
  height: 92vh;
  overflow-y: scroll;
}

.body_items {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.body_item {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}


.body_creator {
  position: fixed;
  bottom: 100rpx;
  display: inline-block;
  padding: 10rpx 45rpx;
  border-radius: 10rpx;
  font-size: 35rpx;
  color: #fff;
  background-color: #13227a;
}

.body_creator_logging {
  position: fixed;
  bottom: 100rpx;
  display: inline-block;
  border-radius: 10rpx;
  font-size: 35rpx;
  color: #fff;
  background-color: #13227a;
}

.body_creator_btn {
  width: 184rpx !important;
  padding: 10rpx 45rpx !important;
  box-sizing: content-box !important;
  background-color: #13227a !important;
