/**index.wxss**/

.container {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;

  width: 100vw;
  height: 100vh;

  background-color: #f5f6f7;
}

/* .header {
  width: 100%;
  height: 80rpx;
} */

.index_body {
  width: 100vw;
  height: 100vh;
}

/* tab相关 */
.index_scroll_tab {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  /* align-items: center; */

  width: 100%;
  height: 85rpx;
  padding: 7.5rpx 10rpx;
  border-top: 1rpx solid #f5f6f7;
  border-top-width: 80%;
  box-sizing: border-box;

  background-color: #fff;
}

.tab_item {
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  width: 150rpx;
  height: 70rpx;

}

.active {
  color: #2775b6;
  font-weight: 700;

  border-bottom: 1rpx solid #2775b6;
  /* border-width: 100rpx; */
}

/* tab-body 相关 */
.index_swiper {
  width: 100%;
  height: calc(100% - 85rpx);
}

.index_swiper_item {
  width: 100%;
  height: 100%;
}

.scroll_view {
  display:flex;
  flex-direction:column;
  justify-content:flex-start;
  align-items:center;

  width: 100%;
  height: 100%;
}

.item_wrapper{
  width: 100%;
  /* height: 100%; */
  padding-bottom: 15rpx;
}





