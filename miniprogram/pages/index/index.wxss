/**index.wxss**/

.container {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;

  width: 100vw;
  height: 100vh;

  background-color: #fff9ed;
}

/* .header {
  width: 100%;
  height: 80rpx;
} */

.index_body {
  width: 100vw;
  height: 100vh;
}

/* tab相关 */
.index_scroll_tab {
  display: flex;
  flex-direction: row;
  justify-content: center;
  /* align-items: center; */

  width: 100%;
  height: 100rpx;
  padding: 7.5rpx 10rpx;
  border-top: 1rpx solid #f5f6f7;
  border-top-width: 80%;
  box-sizing: border-box;

  background-color: #fff9ed;
}

/* tabItem 共有属性 */
.tab_item {
  width: 350rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
}

.tab_item_left{
  background: url("https://wx-interchange.oss.jellyfishmix.com/Fhu_VxBqUq475YnifC2AR4E0n8_x") no-repeat;
  background-size: 100% 100%;
}

.tab_item_right {
  background: url("https://wx-interchange.oss.jellyfishmix.com/Fg6gGQV-PRTXt27eCrwY2OTxxEB6") no-repeat;
  background-size: 100% 100%;
}


.tab_item_left_active {
  background: url("https://wx-interchange.oss.jellyfishmix.com/Ficz7bRkW9TnXe2n64yzIXIizB02") no-repeat;
  background-size: 100% 100%;
  color: #fff;
}

.tab_item_right_active {
  background: url("https://wx-interchange.oss.jellyfishmix.com/FmTbJnZW7td_aKm_oxkkHHsHWbor") no-repeat;
  background-size: 100% 100%;
  color: #fff;
}

/* tab-body 相关 */
.index_swiper {
  width: 100%;
  height: calc(100% - 100rpx) !important;
}

.index_swiper_item {
  width: 100%;
  height: 100% !important;
  padding-top: 15rpx;
  box-sizing: border-box;
}

.scroll_view {
  display:flex;
  flex-direction:column;
  justify-content:flex-start;
  align-items:center;

  width: 100%;
  height: 100%;
}

